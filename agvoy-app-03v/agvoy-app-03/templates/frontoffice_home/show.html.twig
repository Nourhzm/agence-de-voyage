{% extends 'baselayout.html.twig' %}

{% block title %}Circuit{% endblock %}

{% block main %}
    <h1>Circuit</h1>

{# {{  dump(circuit)  }} #}
	
     <div class="form-horizontal"><!-- <form>  -->
    
    	<div class="form-group row">
    	
    	
               <label class="col-sm-2 col-form-label"> Id </label>
               	<div class="col-sm-10">
    		    <div class="form-control form-control-plaintext"> {{ circuit.id }}</div>
    
    		</div>
    	</div>
    	
    	<div class="form-group row">
    		<label class="col-sm-2 col-form-label-lg">Description</label>
                <div class="col-sm-10">
    		    <div class="form-control form-control-plaintext form-control-lg">{{ circuit.description }}</div>
            </div>
    	</div>
    	
    	<div class="form-group row">
    		<label class="col-sm-2 col-form-label">Pays de Départ</label>
                <div class="col-sm-10">
    		    <div class="form-control form-control-plaintext">{{ circuit.paysDepart}}</div>
    		</div>
    	</div>
    	
    	<div class="form-group row">
    		<label class="col-sm-2 col-form-label">Ville de départ</label>
                <div class="col-sm-10">
    		    <div class="form-control form-control-plaintext">{{ circuit.villeDepart }}</div>
    		</div>
    	</div>
    	
    	<div class="form-group row">
    		<label class="col-sm-2 col-form-label">Ville d'arrivée</label>
                <div class="col-sm-10">
    		    <div class="form-control form-control-plaintext">{{ circuit.villeArrivee }}</div>
    		</div>
    	</div>
    	
    	<div class="form-group row">
    		<label class="col-sm-2 col-form-label">Durée du circuit</label>
                <div class="col-sm-10">
    		    <div class="form-control form-control-plaintext">{{circuit.dureeCircuit}}</div>
    		</div>
    	</div>
    	
    	<div class="form-group row">
    		<label class="col-sm-2 col-form-label">Etapes</label>
    		   <div class="col-sm-10">
    		 <table class="table">
       <thead>
            <tr>
               
                <th> numero Etape</th>
                <th>ville Etape</</th>
                <th>nombreJours	</th>
             </tr>
        </thead>
        <tbody>
                {% for etape in circuit.etapes %}
            <tr>
                <td>{{ etape.numeroEtape}} </td>
                <td>{{etape.villeEtape }}</td>
                <td>{{ etape.nombreJours }}</td>
                 
            </tr>
       
        {% endfor %}
        </tbody>
        </table>
        </div>
    	</div>
    	
    	</div> <!-- -fin !! -->
        {# {{  dump(circuit)  }} #}

    <a href="{{ path('circuit_index') }}"> Retour à l'accueil</a>
    
  
                
       
  
        
        </tbody>
        </table>
        </div>
    	</div>

{% endblock %}